<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="60dp"
        android:paddingTop="30dp"
        android:paddingEnd="30dp"
        android:paddingBottom="30dp">

        <TextView
            android:id="@+id/tv_open_apps"
            style="@style/TextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:onClick="onClickOpenApps"
            android:text="Open Apps" />

        <TextView
            android:id="@+id/tv_open_bluetooth"
            style="@style/TextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:onClick="onClickOnBluetooth"
            android:text="Bluetooth Settings" />

        <TextView
            android:id="@+id/tv_open_connectivity"
            style="@style/TextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:onClick="onClickOnOpenConnectivitySettings"
            android:text="Open Connectivity Settings" />

        <TextView
            android:id="@+id/tv_open_display"
            style="@style/TextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:onClick="onClickOnOpenDisplaySettings"
            android:text="Open Display Settings" />

        <TextView
            android:id="@+id/tv_open_sound_settings"
            style="@style/TextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:onClick="onClickOnOpenSoundSettings"
            android:text="Open Sound Settings" />

        <TextView
            android:id="@+id/tv_wifi_settings"
            style="@style/TextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:onClick="onClickOnOpenWifiSettings"
            android:text="Open Wifi Settings" />

        <TextView
            android:id="@+id/tv_toggle_bluetooth"
            style="@style/TextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:onClick="onClickOnToggleBluetooth"
            android:text="Toggle Bluetooth" />

        <TextView
            android:id="@+id/tv_mute_volume"
            style="@style/TextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:onClick="onClickOnToggleVolume"
            android:text="Mute Volume" />

        <TextView
            android:id="@+id/tv_battery_saver"
            style="@style/TextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:onClick="onClickOnBatterySaverSettings"
            android:text="Battery Saver Settings" />

    </LinearLayout>
</ScrollView>

